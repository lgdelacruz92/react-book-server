{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "esModuleInterop": true
    }
  },
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "esModuleInterop": true,
    "incremental": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    ".eslintrc.js",
    "firebase.json",
    "package.json",
    "firestore.indexes.json",
    "scripts"
  ]
}
